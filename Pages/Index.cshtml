@page
@model IndexModel
@{
    ViewData["Title"] = "Coordinate Simulation";
}

<div class="container mt-4">
    <h2>Enter Coordinates</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">X Coordinate</th>
                <th scope="col">Y Coordinate</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="coordinateTable">
            @foreach (var coordinate in Model.Coordinates)
            {
                <tr>
                    <td><input type="number" class="form-control" name="xCoord" value="@coordinate.X" /></td>
                    <td><input type="number" class="form-control" name="yCoord" value="@coordinate.Y" /></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="deleteRow(this)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-primary mt-3" onclick="addRow()">Add Row</button>
    <button class="btn btn-success mt-3" onclick="simulate()">Simulate</button>
</div>

@section Scripts {
    <script>
        function addRow() {
            var table = document.getElementById("coordinateTable");
            var row = table.insertRow();
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);
            cell1.innerHTML = '<input type="number" class="form-control" name="xCoord" />';
            cell2.innerHTML = '<input type="number" class="form-control" name="yCoord" />';
            cell3.innerHTML = '<button type="button" class="btn btn-danger btn-sm" onclick="deleteRow(this)">Delete</button>';
        }

        function deleteRow(btn) {
            var row = btn.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        function simulate() {
            // Add your simulation logic here
            alert('Simulation button clicked!');
        }
    </script>
}
